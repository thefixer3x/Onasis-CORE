# Onasis-CORE Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Router Configuration
ROUTER_PORT=3000
NODE_ENV=development

# Supabase Configuration (Main Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key
SUPABASE_DATABASE_URL=https://your-project.supabase.co
SUPABASE_JWT_SECRET=your_jwt_secret

# Netlify/Deployment Configuration
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Central Auth Configuration
AUTH_GATEWAY_URL=https://api.lanonasis.com
API_BASE_URL=https://api.lanonasis.com
VITE_AUTH_GATEWAY_URL=https://api.lanonasis.com
VITE_API_URL=https://api.lanonasis.com
VITE_API_BASE_URL=https://api.lanonasis.com

# Dashboard & UI Configuration
VITE_DASHBOARD_URL=https://dashboard.lanonasis.com
VITE_MCP_URL=https://mcp.lanonasis.com
VITE_DOCS_URL=https://docs.lanonasis.com

# Project Configuration
VITE_PROJECT_SCOPE=lanonasis-maas
SERVICE_ID=onasis-core

# Feature Flags
VITE_USE_CENTRAL_AUTH=true
VITE_USE_FALLBACK_AUTH=false
VITE_ENABLE_MCP=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_I18N=true
VITE_ENABLE_REAL_TIME=true
VITE_DEBUG=false
VITE_DEV_MODE=false

# Supabase Client Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# SD-Ghost Protocol Integration (Optional)
SD_GHOST_VPS_URL=http://your-vps-ip:3000
SD_GHOST_SUPABASE_URL=https://your-sd-ghost-project.supabase.co
SD_GHOST_SUPABASE_ANON_KEY=your_sd_ghost_anon_key
SD_GHOST_MEMORY_API_KEY=your_memory_api_key

# Security Configuration
KEY_ENCRYPTION_SECRET=your_encryption_secret_minimum_32_characters

# API Keys for External Services
OPENAI_API_KEY=your_openai_api_key

# Memory Service Configuration
MEMORY_SERVICE_URL=https://api.lanonasis.com
USE_LOCAL_MEMORY=false

# MCP Configuration
ENABLE_MEMORY_MCP=true
MEMORY_MCP_PORT=3001
MEMORY_MCP_HOST=localhost

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=*

# Security
BCRYPT_ROUNDS=12

# Monitoring & Analytics
ENABLE_SWAGGER=false
ENABLE_METRICS=true
ENABLE_AUDIT_LOG=true
AUDIT_LOG_LEVEL=info

# Build Configuration
NODE_VERSION=18
SECRETS_SCAN_OMIT_KEYS=VITE_PROJECT_SCOPE,VITE_API_URL,VITE_DASHBOARD_URL,VITE_MCP_URL