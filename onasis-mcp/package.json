{
  "name": "lanonasis-mcp-server",
  "version": "1.0.0",
  "description": "Lanonasis MCP Server - Memory-aware AI assistant with 17+ tools for enterprise deployment",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node dist/unified-mcp-server.js",
    "start:stdio": "node dist/unified-mcp-server.js --stdio",
    "start:http": "node dist/unified-mcp-server.js --http",
    "dev": "tsx watch src/unified-mcp-server.ts",
    "dev:stdio": "tsx watch src/unified-mcp-server.ts --stdio",
    "dev:http": "tsx watch src/unified-mcp-server.ts --http",
    "build": "tsc && tsc-alias",
    "test": "jest",
    "test:connection": "node scripts/test-mcp-connection.js",
    "test:memory": "node scripts/test-memory-operations.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "deploy": "./scripts/deploy-to-vps.sh",
    "deploy:test": "./scripts/test-deployment.sh",
    "health": "curl -s https://mcp.lanonasis.com/health | jq",
    "logs": "pm2 logs lanonasis-mcp-server",
    "studio": "npm run start:http"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@supabase/supabase-js": "^2.53.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.76.1",
    "serverless-http": "^3.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.3",
    "winston": "^3.17.0",
    "ws": "^8.16.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "ai",
    "memory",
    "assistant",
    "claude",
    "supabase",
    "lanonasis",
    "onasis",
    "enterprise",
    "standalone"
  ],
  "author": "Lanonasis Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lanonasis/onasis-mcp-server.git"
  },
  "homepage": "https://mcp.lanonasis.com",
  "bugs": {
    "url": "https://github.com/lanonasis/onasis-mcp-server/issues"
  }
}