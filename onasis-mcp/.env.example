# Lanonasis MCP Server Configuration

# Server Configuration
NODE_ENV=production
PORT=3001
MCP_WS_PORT=3002
MCP_SSE_PORT=3003
MCP_HOST=0.0.0.0

# Lanonasis Supabase Configuration
ONASIS_SUPABASE_URL=https://api.lanonasis.com
ONASIS_SUPABASE_ANON_KEY=your_supabase_anon_key_here
ONASIS_SUPABASE_SERVICE_KEY=your_supabase_service_key_here
SUPABASE_SSL_CERT_PATH=/opt/certs/prod-ca-2021.crt

# CORS Configuration
CORS_ORIGINS=https://lanonasis.com,https://api.lanonasis.com,https://mcp.lanonasis.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/lanonasis-mcp/combined.log

# Rate Limiting
MCP_RATE_LIMIT=100
MCP_MAX_CONNECTIONS=1000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# MCP Server Identification
MCP_SERVER_NAME=lanonasis-mcp-server
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_DESCRIPTION="Lanonasis MCP Server - Enterprise Memory-Aware AI Assistant"

# Security Configuration
JWT_SECRET=your_jwt_secret_here
API_KEY_PREFIX=onasis_

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_SSE=true
ENABLE_HTTP_BRIDGE=false
ENABLE_METRICS=true