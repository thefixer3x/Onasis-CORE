# Neon Database Configuration
DATABASE_URL="postgresql://neondb_owner:PASSWORD@ep-example.us-east-1.aws.neon.tech/neondb?sslmode=require"
DIRECT_DATABASE_URL="postgresql://neondb_owner:PASSWORD@ep-example.us-east-1.aws.neon.tech/neondb?sslmode=require&connect_timeout=10"
SERVICE_ROLE_DATABASE_URL="postgresql://service_role:PASSWORD@ep-example.us-east-1.aws.neon.tech/neondb?sslmode=require"

# Supabase Compatibility (if using Supabase Auth services alongside Neon)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="[REDACTED_SUPABASE_ANON_KEY]"
SUPABASE_SERVICE_ROLE_KEY="[REDACTED_SUPABASE_SERVICE_ROLE_KEY]"
SUPABASE_AUTH_URL="https://your-project.supabase.co/auth/v1"

# Auth Gateway Configuration
PORT=4000
NODE_ENV="development"
CORS_ORIGIN="http://localhost:5173,https://your-domain.com"
JWT_SECRET="change-me-32-char-minimum"
JWT_EXPIRY="7d"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"
