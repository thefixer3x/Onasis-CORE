# =============================================================================
# Supabase Configuration (PRIMARY)
# =============================================================================

# Supabase Project URLs
SUPABASE_URL=https://test.supabase.co
SUPABASE_AUTH_URL=https://test.supabase.co/auth/v1

# Database Connection (Supabase Pooler - recommended for serverless/production)
# Format: postgresql://user:pass@host:port/db
DATABASE_URL=postgresql://user:pass@localhost:5432/db

# Direct Database Connection (for migrations, schema changes)
# Format: postgresql://user:pass@host:port/db
DIRECT_DATABASE_URL=postgresql://user:pass@localhost:5432/db

# Supabase API Keys
SUPABASE_ANON_KEY=test-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=test-supabase-service-role-key

# =============================================================================
# Auth Gateway Configuration
# =============================================================================

PORT=4000
NODE_ENV="development"

# CORS Origins (comma-separated)
CORS_ORIGIN="http://localhost:5173,https://your-domain.com"

# JWT Configuration
JWT_SECRET=test-jwt-secret-32-characters-long-0000
JWT_EXPIRY="7d"

# =============================================================================
# Rate Limiting
# =============================================================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Logging
# =============================================================================

LOG_LEVEL="info"
LOG_FORMAT="json"

# =============================================================================
# Postgres Configuration (Alternative to DATABASE_URL)
# =============================================================================

PGHOST='db.your-project-ref.supabase.co'
PGDATABASE='postgres'
PGUSER='postgres'
PGPASSWORD=test-db-password
PGSSLMODE='require'

# =============================================================================
# Webhook Configuration
# =============================================================================

# Secret for verifying webhook payloads
WEBHOOK_SECRET=test-webhook-secret
