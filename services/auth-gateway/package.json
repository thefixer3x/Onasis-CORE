{
  "name": "auth-gateway",
  "version": "0.1.0",
  "description": "Neon-integrated authentication gateway template",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p .",
    "start": "node start.js",
    "lint": "eslint src --ext .ts",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose src/**/*.test.ts",
    "test:integration": "vitest run --reporter=verbose tests/integration/**/*.test.ts",
    "test:security": "vitest run --reporter=verbose tests/security/**/*.test.ts",
    "test:load": "k6 run tests/load/oauth-flow.js",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.5",
    "@supabase/supabase-js": "^2.47.6",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^8.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "ms": "^2.1.3",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "prom-client": "^15.1.0",
    "winston": "^3.17.0",
    "ws": "^8.17.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.30",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "k6": "^0.0.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.3",
    "typescript": "^5.4.5",
    "vitest": "^1.0.0"
  }
}
