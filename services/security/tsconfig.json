{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "lib": [
      "ES2022"
    ],
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "services/**/*",
    "middleware/**/*",
    "routes/**/*",
    "types/**/*",
    "scripts/**/*",
    "examples/**/*",
    "config/**/*",
    "utils/**/*",
    "tests/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}