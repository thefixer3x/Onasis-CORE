# Enhanced MCP Server Dockerfile
# For enterprise WebSocket MCP deployment

FROM node:18-alpine

# Install system dependencies
RUN apk add --no-cache \
    dumb-init \
    curl \
    && rm -rf /var/cache/apk/*

# Create app directory
WORKDIR /app

# Create logs directory
RUN mkdir -p logs

# Copy package files first for better layer caching
COPY package*.json ./

# Install dependencies (cached layer if package files unchanged)
RUN npm ci --omit=dev && npm cache clean --force

# Copy source files after dependencies are installed
COPY services/ ./services/
COPY deploy/ ./deploy/

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S mcp -u 1001 -G nodejs

# Change ownership
RUN chown -R mcp:nodejs /app

# Switch to non-root user
USER mcp

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8080/health || exit 1

# Expose ports
EXPOSE 8080 8081

# Use dumb-init to handle signals properly
ENTRYPOINT ["dumb-init", "--"]

# Start the MCP server
CMD ["node", "deploy/mcp-server.js"]
